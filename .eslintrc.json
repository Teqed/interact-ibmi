{
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint",
    "prettier",
	"unicorn",
	"import"],
	"parserOptions": {
	  "project": ["./tsconfig.json"] // Specify it only for TypeScript files
	},
	"globals": {
		"NodeJS": true
	},
	"env": {
		"browser": true,
		"es6": true,
		"es2022": true,
		"node": true
	},
	"extends": [
		"canonical",
		"eslint:recommended",
		"xo",
		"airbnb-base",
		"canonical/prettier",
		"prettier",
		"plugin:node/recommended"
	],
	"overrides": [
		{
		  "files": ["*.ts", "*.tsx", ".mts", ".mtx"], // Your TypeScript files extension
	
		  // As mentioned in the comments, you should extend TypeScript plugins here,
		  // instead of extending them outside the `overrides`.
		  // If you don't want to extend any rules, you don't need an `extends` attribute.
		  "extends": [
			"canonical/typescript",
			"xo-typescript",
			"airbnb-typescript",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:import/recommended",
			"plugin:import/typescript",
			"plugin:unicorn/recommended"
		  ]
		}
	],
	  "rules": {
		"import/extensions": [
		   "error",
		   "ignorePackages",
		   {
			 "js": "never",
			 "jsx": "never",
			 "ts": "never",
			 "tsx": "never",
			 "mts": "never",
			 "mjs": "never"
		   }
		],
		"no-console": "off",
		"@typescript-eslint/indent" : "off",
		"@typescript-eslint/no-explicit-any" : "warn",
		"@typescript-eslint/return-await" : "off",
		"no-tabs" : [ "warn", {"allowIndentationTabs" : true}],
		"object-curly-newline": ["error", {
			"ObjectExpression": "always",
			"ObjectPattern": { "multiline": true },
			"ImportDeclaration": "never",
			"ExportDeclaration": { "multiline": true, "minProperties": 3 }
		}],
		"object-curly-spacing": ["off"],
		"@typescript-eslint/object-curly-spacing": "off",
		"react/jsx-filename-extension": [0],
		"@babel/semi": "off",
		"max-len": ["warn", { "code": 120 }],
		"no-plusplus":  ["warn", {"allowForLoopAfterthoughts": true}],
		"implicit-arrow-linebreak": ["off", "beside"], // Interferes with Prettier
		"prettier/prettier": [ "warn", {
			"singleQuote": true,
			"trailingComma": "all",
			"printWidth": 100,
			"tabWidth": 4,
			"semi": true,
			"bracketSpacing": true,
			"jsxBracketSameLine": false,
			"parser": "typescript",
			"useTabs": true,
			"arrowParens": "avoid",
			"overrides": [
				{
					"files": ["*.ts", "*.tsx", ".mts", ".mtx"], // Your TypeScript files extension
					"options": {
						"parser": "typescript"
					}
				}
			],
			"endOfLine": "lf",
			"quoteProps": "as-needed"
		}],
		"canonical/import-specifier-newline": ["off"],
		"import/no-cycle": "warn",
		"no-unused-vars": "warn",
		"node/no-missing-import": 0,
		"unicorn/no-array-for-each": "off",
		"prefer-const": "warn",
		"unicorn/no-unused-properties": "warn"
	  },
	  "settings": {
		"import/resolver":{
		  "typescript": ["true", {"alwaysTryTypes": "true", "project": "./tsconfig.json"}],
		  "node": "true"},
		"import/parsers": {
			"@typescript-eslint/parser": [".ts", ".tsx", ".mts", ".mtx"]
		}
	}
}
