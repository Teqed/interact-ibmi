{
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint",
    "prettier",
	"import"],
	"globals": {
		"NodeJS": true
	},
	"env": {
		"browser": true,
		"es6": true,
		"es2022": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"prettier",
		"xo",
		"airbnb-base",
		"canonical"
	],
	"overrides": [
		{
			"files": ["*.js", "*.jsx", "*.mjs", "*.cjs", "*.mjx", "*.cjx"],

			"extends": [
				"plugin:node/recommended"
			],

			"rules": {
			}
		},

		{
		  "files": ["*.ts", "*.tsx", "*.mts", "*.mtx"], // Your TypeScript files extension
	
		  "parserOptions": {
			"project": ["./tsconfig.eslint.json"] // Specify it only for TypeScript files
		  },
		  // As mentioned in the comments, you should extend TypeScript plugins here,
		  // instead of extending them outside the `overrides`.
		  // If you don't want to extend any rules, you don't need an `extends` attribute.
		  "extends": [
			"plugin:import/typescript",
			"plugin:node/recommended",
			"canonical/typescript",
			"canonical/module",
			"canonical/node",
			"canonical/prettier",
			"xo-typescript",
			"airbnb-typescript",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:import/recommended"
		  ],
		  
	  "rules": {
		"import/extensions": [
		   "error",
		   "ignorePackages",
		   {
			 "js": "never",
			 "jsx": "never",
			 "ts": "never",
			 "tsx": "never",
			 "mts": "never",
			 "mjs": "never"
		   }
		],
		"no-console": "off",
		// "@typescript-eslint/indent" : ["warn", "tab"],
		"@typescript-eslint/indent" : ["off"],
		"@typescript-eslint/no-explicit-any" : "warn",
		"@typescript-eslint/return-await" : "off",
		"no-tabs" : [ "warn", {"allowIndentationTabs" : true}],
		"object-curly-newline": ["off", {
			"ObjectExpression": "always",
			"ObjectPattern": { "multiline": true },
			"ImportDeclaration": { "multiline": true, "minProperties": 3 },
			"ExportDeclaration": { "multiline": true, "minProperties": 3 }
		}],
		"object-curly-spacing": ["off"],
		"@typescript-eslint/object-curly-spacing": "off",
		"react/jsx-filename-extension": [0],
		"@babel/semi": "off",
		"max-len": ["warn", { "code": 120 }],
		"no-plusplus":  ["warn", {"allowForLoopAfterthoughts": true}],
		"implicit-arrow-linebreak": ["off", "beside"], // Interferes with Prettier
		"prettier/prettier": [ "warn", {
			"singleQuote": true,
			"trailingComma": "all",
			"printWidth": 100,
			"tabWidth": 4,
			"semi": true,
			"bracketSpacing": true,
			"jsxBracketSameLine": false,
			"parser": "typescript",
			"useTabs": true,
			"arrowParens": "avoid",
			"overrides": [
				{
					"files": ["*.ts", "*.tsx", "*.mts", "*.mtx"], // Your TypeScript files extension
					"options": {
						"parser": "typescript"
					}
				}
			],
			"endOfLine": "lf",
			"quoteProps": "as-needed"
		}],
		"canonical/import-specifier-newline": ["off"],
		"import/no-cycle": "warn",
		"no-unused-vars": "off",
		"node/no-missing-import": 0,
		"unicorn/no-array-for-each": "off",
		"prefer-const": "warn",
		"unicorn/no-unused-properties": "warn",
		"@typescript-eslint/naming-convention": "warn",
		"typescript-sort-keys/interface": "warn",
		"@typescript-eslint/quotes": ["warn", "backtick"],
		"@typescript-eslint/no-unnecessary-type-assertion": "warn",
		"@typescript-eslint/sort-type-union-intersection-members": "warn",
		"unicorn/no-await-expression-member": "warn",
		"canonical/sort-keys": "warn",
		"no-await-in-loop": "warn",
		"promise/prefer-await-to-then": "warn",
		"import/prefer-default-export": "warn",
		"unicorn/prevent-abbreviations": "warn",
		"unicorn/filename-case": "warn",
		"unicorn/no-nested-ternary": "warn",
		"unicorn/no-null": "warn",
		"unicorn/no-useless-undefined": "warn",
		"unicorn/prefer-query-selector": "warn",
		"canonical/id-match": "warn",
		"@typescript-eslint/brace-style": ["off", "allman", { "allowSingleLine": true }]
	  },
	  "settings": {
		"import/resolver":{
		  "typescript": ["true", {"alwaysTryTypes": "true", "project": "./tsconfig.json"}],
		  "node": "true"},
		"import/parsers": {
			"@typescript-eslint/parser": [".ts", ".tsx", ".mts", ".mtx"]
		}
	}
		}
	]
}
